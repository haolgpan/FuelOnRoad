<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ModificarVehiculoFragment">

        <TextView
            android:id="@+id/txtIntroducelama"
            style="@style/txtIntermedium20"
            android:layout_width="355dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/msg_introduce_la_ma"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/msg_introduce_la_ma" />

        <View
            android:id="@+id/viewRectangleTwentyFive"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rectangle_bg_bluegray_100_radius_20"
            app:layout_constraintStart_toStartOf="@+id/txtIntroducelama"
            app:layout_constraintTop_toBottomOf="@+id/txtIntroducelama" />

        <TextView
            android:id="@+id/txtQuetipodere"
            style="@style/txtIntermedium20"
            android:layout_width="355dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/msg_que_tipo_de_re"
            app:layout_constraintStart_toStartOf="@+id/viewRectangleTwentyFive"
            app:layout_constraintTop_toBottomOf="@+id/viewRectangleTwentyFive"
            tools:text="@string/msg_que_tipo_de_re" />

        <View
            android:id="@+id/viewRectangleTwentyFour"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rectangle_bg_bluegray_100_radius_20"
            app:layout_constraintStart_toStartOf="@+id/txtQuetipodere"
            app:layout_constraintTop_toBottomOf="@+id/txtQuetipodere" />

        <TextView
            android:id="@+id/buttonAceptar"
            style="@style/btnSolidRounded"
            android:layout_width="295dp"
            android:layout_height="65dp"
            android:layout_marginTop="290dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="@string/lbl_aceptar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewRectangleTwentyFour"
            tools:text="@string/lbl_aceptar" />

        <TextView
            android:id="@+id/txtGroupTwentySix"
            style="@style/txtSolidRounded"
            android:layout_width="295dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/_12pxh"
            android:paddingTop="@dimen/_6pxv"
            android:paddingEnd="@dimen/_23pxh"
            android:paddingBottom="@dimen/_7pxv"
            android:singleLine="true"
            android:text="@string/lbl_cancelar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonAceptar"
            tools:text="@string/lbl_cancelar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>